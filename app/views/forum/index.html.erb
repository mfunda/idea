<div class='container'>
<h1 class="page-header">Forum<span style='float: right'><%= link_to 'New Topic', new_forum_post_path, class: "label label-info", id: 'action-label' %></span></h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Topic</th>
        <th>Category</th>
        <th>Author</th>
        <th>Replies</th>
        <th>Activity</th>
        <th>Created</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |forum_post| %>
        <tr>
          <td><%= forum_post.title %></td>
          <td><%= forum_post.forum_category.name %></td>
          <td><%= link_to (image_tag forum_post.user.avatar.url(:thumb), id: 'forum-post-users', title: forum_post.user.login), show_user_profile_path(forum_post.user) %></td>
          <td><%= forum_post.forum_replies.count %></td>
          <% if forum_post.forum_replies.present? %>
          	<td><%= time_ago_in_words(forum_post.forum_replies.last.created_at) %></td>
          <% else %>
          	<td>no replies</td>
          <% end %>
          <td><%= time_ago_in_words(forum_post.created_at) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= will_paginate @posts, next_label: '»', previous_label: '«' %>
</div>
<br>

</div>