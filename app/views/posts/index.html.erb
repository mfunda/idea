<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<%= column_chart @posts.group(:category_id).count.map{ |k, v| [ Category.find(k).name, v ] } %>


<%= form_tag posts_path, :method => 'get' do %>
  <%= label_tag 'Find Post: ' %>
  <%= text_field_tag :search_by_title, params[:search_by_title] %>
  Category: <%= select_tag :search_by_category, options_from_collection_for_select(@categories, :id, :name, params[:search_by_category]), include_blank: true %>
  Order by: <%= select_tag :order_by, options_for_select([['Lastest', 'desc'], ['Oldest', 'asc']], params[:order_by]), include_blank: true %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Category</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.login if post.user.present? %></td>
        <td><%= post.category.name if post.category.present? %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
