<h1 class="page-header"><%= @user.login %>'s posts</h1>

<%= link_to 'Back', :back, class: "label label-warning", id: 'action-label' %> <br/><br/>
<% if @posts.present? %>
	<% @posts.each do |post| %>
		<div class='jumbotron'>
			<p><strong>Title: </strong><%= post.title %></p>
			<p><strong>Comments: </strong><%= post.comments.count %></p>
			<p><strong>Added: </strong><%= post.created_at %></p>
			<%= link_to 'Show', post_path(post), class: "label label-success", id: 'action-label' %>
			<%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?'}, class: "label label-danger", id: 'action-label' %>
		</div>
	<% end %>
<% else %>
	<p> This User has no posts </p>

<% end %>