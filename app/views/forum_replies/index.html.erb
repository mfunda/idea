<h1 class="page-header">Forum Replies</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Post Title</th>
        <th>Content</th>
        <th>Author</th>
        <th>Created at</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody class='sum-tbody'>
    <% @forum_replies.each do |forum_reply| %>
      <tr>
        <td><%= forum_reply.id %></td>
        <td><%= forum_reply.forum_post.title %></td>
        <td><%= forum_reply.content %></td>
        <td><%= forum_reply.user.login %></td>
        <td><%= forum_reply.created_at %></td>
        <td><%= link_to 'Show', forum_reply, class: "label label-success", id: 'action-label' %></td>
        <td><%= link_to 'Edit', edit_forum_reply_path(forum_reply), class: "label label-primary", id: 'action-label' %></td>
        <td><%= link_to 'Destroy', forum_reply, method: :delete, data: { confirm: 'Are you sure?' }, class: "label label-danger", id: 'action-label' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @forum_replies, next_label: '»', previous_label: '«' %>
</div>
<br>

<%= link_to 'New Forum reply', new_forum_reply_path, class: "label label-info", id: 'action-label' %>
