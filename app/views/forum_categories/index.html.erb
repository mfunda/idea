<h1 class="page-header">Forum Categories</h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Author</th>
        <th>Posts Count</th>
        <th>Created At</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @forum_categories.each do |forum_category| %>
        <tr>
          <td><%= forum_category.id %></td>
          <td><%= forum_category.name %></td>
          <td><%= forum_category.user.login %></td>
          <td><%= forum_category.forum_posts.count %></td>
          <td><%= forum_category.created_at %></td>
          <td><%= link_to 'Show', forum_category, class: "label label-success", id: 'action-label' %></td>
          <td><%= link_to 'Edit', edit_forum_category_path(forum_category), class: "label label-primary", id: 'action-label' %></td>
          <td><%= link_to 'Destroy', forum_category, method: :delete, data: { confirm: 'Are you sure?' }, class: "label label-danger", id: 'action-label' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= will_paginate @forum_posts, next_label: '»', previous_label: '«' %>
</div>
<br>

<%= link_to 'New Forum category', new_forum_category_path, class: "label label-info", id: 'action-label' %>
