<div class='container'>
<h2 class='form-signin-heading' align='center'>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <%= f.label :first_name, class: 'sr-only' %><br />
    <%= f.text_field :first_name, class: 'form-control', placeholder: "First Name" %>

    <%= f.label :last_name, class: 'sr-only' %><br />
    <%= f.text_field :last_name, class: 'form-control', placeholder: "Last Name" %>

    <%= f.label :login, class: 'sr-only' %><br />
    <%= f.text_field :login, class: 'form-control', placeholder: "Login" %>

    <%= f.label :email, class: 'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, type: 'email', class: 'form-control', id: 'inputEmail', placeholder: "Email Address" %>

    <%= f.label :password, class: 'sr-only' %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', id: 'inputPassword', placeholder: "Password" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.label :password_confirmation, class: 'sr-only' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', id: 'inputPassword', placeholder: "Password Confirmation" %>

  <div class="actions">
    <br/>
    <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block", type: "submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>