<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<%= form_tag categories_path, :method => 'get' do %>
  <%= label_tag 'Find Post: ' %>
  <%= text_field_tag :search, params[:search] %>
  Order by posts count: <%= select_tag :order_by, options_for_select([['Descending', 'desc'], ['Ascending', 'asc']], params[:order_by]), include_blank: true %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Posts count</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td align='center'><%= category.posts.count %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
